<div class="container">
  <h1 class="display-4 text-center">İşçilərin Siyahısı</h1>
  <div class="float-right">
    <button class="btn btn-outline-info btn-sm" data-toggle="modal" data-target="#addEmp">Əlavə Et</button>
  </div>

  <table class="table">
    <tr>
      <th>S/N</th>
      <th>Ad Soyad</th>
      <th>Vəzifə</th>
      <th>Maaş</th>
      <th>Tarix</th>
      <th>Əməliyyatlar</th>
    </tr>
    <% for( let i = 0; i < isciler.length; i++ ) { %>
        <tr>
            <td><%= (i + 1) %> </td>
            <td><%= isciler[i].adsoyad %> </td>
            <td><%= isciler[i].vezife %></td>
            <td><%= isciler[i].maas %> AZN</td>
            <td><%= isciler[i].tarix %></td>
            <td>
                <button  class="btn btn-outline-success btn-sm" data-toggle="modal" data-target="#editEmp_<%= isciler[i].id %>">Redaktə Et</button>
                <button onclick="Sil('<%= isciler[i].id %>')" class="btn btn-outline-danger btn-sm">Sil</button>
            </td>
        </tr>
    <% } %>
      
  </table>
</div>


<div class="modal fade" id="addEmp" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Yeni İşçi</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form method="POST" action="/isci-elave">
            <div class="form-group">
              <label for="adsoyad" class="col-form-label">Ad Soyad:</label>
              <input type="text" name="adsoyad" class="form-control" id="adsoyad">
            </div>
            <div class="form-group">
                <label for="vezife" class="col-form-label">Vəzifə:</label>
                <input type="text" name="vezife" class="form-control" id="vezife">
              </div>
              <div class="form-group">
                <label for="maas" class="col-form-label">Maaş:</label>
                <input type="number" step="0.01" name="maas" class="form-control" id="maas">
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Bağla</button>
                <button class="btn btn-primary">Əlavə Et</button>
              </div>
          </form>
        </div>
        
      </div>
    </div>
  </div>

  <% for( let i = 0; i < isciler.length; i++ ) { %>
  <div class="modal fade" id="editEmp_<%= isciler[i].id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">İşçi məlumatlarını yenilə</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form method="POST" action="/isci-redakte">
            <input type="hidden" name="edit_id" id="edit-id" value="<%= isciler[i].id %>" />
            <div class="form-group">
              <label for="edit-adsoyad" class="col-form-label">Ad Soyad:</label>
              <input type="text" name="edit_adsoyad" value="<%= isciler[i].adsoyad %>" class="form-control" id="edit-adsoyad">
            </div>
            <div class="form-group">
                <label for="edit-vezife" class="col-form-label">Vəzifə:</label>
                <input type="text" name="edit_vezife" value="<%= isciler[i].vezife %>" class="form-control" id="edit-vezife">
              </div>
              <div class="form-group">
                <label for="edit-maas" class="col-form-label">Maaş:</label>
                <input type="number" step="0.01" name="edit_maas" value="<%= isciler[i].maas %>" class="form-control" id="edit-maas">
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Bağla</button>
                <button class="btn btn-primary">Redaktə Et</button>
              </div>
          </form>
        </div>
        
      </div>
    </div>
  </div>
  <% } %>